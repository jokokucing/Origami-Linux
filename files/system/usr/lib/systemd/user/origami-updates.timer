[Unit]
Description=Run Topgrade System Updates Periodically

[Timer]
# Runs 1 hour after boot
OnBootSec=1h
# Runs 8 hours after the last update finished
OnUnitInactiveSec=8h
# Adds a random delay of up to 2 hours to prevent all machines updating at once
RandomizedDelaySec=2h

[Install]
WantedBy=timers.target
